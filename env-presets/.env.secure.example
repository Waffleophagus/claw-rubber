# Hardened self-hosted profile.
# Intended for trusted/private deployments where you want tighter defaults.

CLAWRUBBER_BRAVE_API_KEY=
PORT=3000
HOST=127.0.0.1

CLAWRUBBER_PROFILE=paranoid
CLAWRUBBER_FAIL_CLOSED=true
CLAWRUBBER_REDACT_URLS=true
CLAWRUBBER_EXPOSE_SAFE_CONTENT_URLS=false
CLAWRUBBER_ENABLE_DASHBOARD_WRITE_API=false

CLAWRUBBER_ALLOWLIST_DOMAINS=
CLAWRUBBER_BLOCKLIST_DOMAINS=
CLAWRUBBER_LANGUAGE_NAME_ALLOWLIST_EXTRA=

# Keep renderer disabled unless strictly needed.
CLAWRUBBER_WEBSITE_RENDERER_BACKEND=none
CLAWRUBBER_BROWSERLESS_FALLBACK_TO_HTTP=false

CLAWRUBBER_RATE_LIMIT=free
CLAWRUBBER_BRAVE_QUEUE_MAX=5
CLAWRUBBER_BRAVE_RATE_LIMIT_RETRY_ON_429=true
CLAWRUBBER_BRAVE_RATE_LIMIT_RETRY_MAX=1

CLAWRUBBER_DB_PATH=./data/claw-rubber.db
CLAWRUBBER_LOG_DIR=./data/logs
CLAWRUBBER_RESULT_TTL_MINUTES=15
CLAWRUBBER_RETENTION_DAYS=7
